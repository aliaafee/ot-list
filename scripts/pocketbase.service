# /etc/systemd/system/pocketbase.service
[Unit]
Description=OtList PocketBase service
After=network.target

[Service]
# Run under a dedicated user with minimal privileges
User=pocketbase
Group=pocketbase

# Working directory (adjust if needed, e.g., for migrations or static files)
WorkingDirectory=/opt/ot-list/pb

# The executable path
ExecStart=/opt/ot-list/pb/pocketbase serve --http 0.0.0.0:8090 --publicDir /opt/ot-list/dist

# Restart policy
Restart=on-failure
RestartSec=5s

# Security hardening
NoNewPrivileges=true
ProtectSystem=full
ProtectHome=true
PrivateTmp=true
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=true
ReadWritePaths=/opt/react-pocketbase

[Install]
WantedBy=multi-user.target
